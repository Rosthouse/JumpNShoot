            <string>///Movement Code
var move_right = false;
var jump = false;
var crouch = false;

if(os_type == os_android || os_type == os_ios){
    
    var move_index = -1;
    var shoot_index = -1;
    
    //Jump and crouch, on the left side of the display
    for(var i = 0; i&lt;4;i++){
        if(device_mouse_raw_x(i) &lt; display_get_width()/2){
            move_index = i;
            break;
        }
    }
    //Shooting, on the right side of the display
    for(var j = 0; j&lt;4;j++){
        if(device_mouse_raw_x(j) &gt; display_get_width()/2){
            shoot_index = j;
            break;
        } 
    }
    
    //Handle movement keys
    if(device_mouse_check_button_pressed(move_index, mb_any)){
        jump = true;
    }
    
    
    //Handle shooting
    if(device_mouse_check_button_pressed(shoot_index, mb_any) &amp;&amp; bullets_fired &lt; bullets_max){
    
        
        if(mgr_Options.shoot_freely){
            show_debug_message("Shoot_index: " + string(shoot_index) );
            show_debug_message("Shooting WHEREVER THE FUCK I WANT");
            scr_shoot_bullets(device_mouse_x(shoot_index), device_mouse_y(shoot_index), x+10, y, obj_Bullet);
        } else {
            view_height = view_hview[0];
            
            if(device_mouse_raw_y(shoot_index) &lt; (view_height/3)){
                scr_shoot_bullets(view_xview[0]+view_wview[0], y-view_hview[0], x+10, y, obj_Bullet);
                show_debug_message("Shooting upwards");
                //scr_shoot_bullets(x+20, 0, x+10, 0, obj_Bullet); 
            } else if(device_mouse_raw_y(shoot_index) &gt; view_height/3 &amp;&amp; device_mouse_raw_y(shoot_index) &lt; (view_height/3)*2){
                scr_shoot_bullets(x+20, y, x+10, y, obj_Bullet);
                show_debug_message("Shooting straight");
            } else {
                scr_shoot_bullets(view_xview[0]+view_wview[0], y+view_hview[0]/2, x+10, y, obj_Bullet);
                show_debug_message("Shooting downwards");
            }
        }
        
        
        
        
    
        //scr_shoot_bullets(x+20, y, x+10, y, obj_Bullet);
        bullets_fired++;
    }
} else {
    move_right = keyboard_check_direct( ord('D') );
    jump = keyboard_check_pressed( ord('W') );
    crouch = keyboard_check_direct( ord('S') );
    
    if(mouse_check_button_pressed(mb_left)){
        scr_shoot_bullets(mouse_x, mouse_y, x+10, y, obj_Bullet);
        
        //scr_shoot_bullets(view_xview[0]+view_wview[0], y-view_hview[0], x+10, y, obj_Bullet);
            
    }
}




scr_player_movement(move_right, jump, crouch);



</string>
